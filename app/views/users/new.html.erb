<h1>Register</h1>
<p>This where you register!</p>
<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p><%= error %></p>
	<% end %>
<% end %>


<%= form_for(@user) do |f| %>
  <%= f.label :first_name, 'your first name:' %><br>
  <%= f.text_field :first_name %><br>
  <%= f.label :first_name, 'your last name:' %><br>
  <%= f.text_field :last_name %><br>
  <%= f.label :email, 'your email' %><br>
  <%= f.text_field :email %><br>
  <%= f.label :password, 'your password' %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation, 'password:' %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit 'register' %>
<% end %>
<a href="signin">sign in!</a>